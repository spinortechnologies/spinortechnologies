# Configuración para Obtención de Papers en Tiempo Real
# Real-time Papers Configuration

# Fuentes de datos / Data sources
ENABLE_REALTIME_PAPERS=true
AUTO_UPDATE_FREQUENCY=daily  # hourly, daily, weekly
MAX_PAPERS_PER_UPDATE=25

# Categorías de ArXiv para finanzas cuantitativas
ARXIV_CATEGORIES=[
    "q-fin.PR",  # Pricing of Securities
    "q-fin.RM",  # Risk Management
    "q-fin.PM",  # Portfolio Management
    "q-fin.TR",  # Trading and Market Microstructure
    "q-fin.MF",  # Mathematical Finance
    "q-fin.CP",  # Computational Finance
    "q-fin.ST",  # Statistical Finance
    "q-fin.EC",  # Economics
]

# Filtros de calidad / Quality filters
MIN_CITATION_THRESHOLD=0
QUALITY_SCORE_THRESHOLD=0.6
LANGUAGE_FILTER=["en", "es"]

# Palabras clave específicas / Specific keywords
FINANCE_KEYWORDS=[
    "quantitative finance",
    "option pricing",
    "risk management", 
    "portfolio optimization",
    "algorithmic trading",
    "market microstructure",
    "derivatives",
    "stochastic calculus",
    "financial modeling",
    "econophysics"
]

# Configuración de almacenamiento / Storage configuration
PAPERS_DATA_DIR=./data/papers
VECTOR_DB_UPDATE=true
BACKUP_OLD_DATA=true
